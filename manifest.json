{
  "manifest_version": 2,
  "name": "Budget Manager",
  "version": "1.0",
  "description": "this extension track your overall spending",

  "icons": {
    "128": "icon/icon128.png",
    "48": "icon/icon48.png",
    "16": "icon/icon16.png"
  },

  "browser_action": {
    "default_icon": "icon/icon16.png",
    "default_popup": "popup.html"
  },

  "options_page": "option.html",

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
    "storage",
    "notifications",
    "contextMenus"
  ]
}
